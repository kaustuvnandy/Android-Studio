<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20sp"
    tools:context=".MainActivity"
    android:background="@color/colorPrimaryDark">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:text="Scroll View"
        android:fontFamily="monospace"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollViewId">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button 1"
                android:id="@+id/b1Id"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button 2"
                android:id="@+id/b2Id"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button 3"
                android:id="@+id/b3Id"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button 4"
                android:id="@+id/b4Id"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button 5"
                android:id="@+id/b5Id"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button 6"
                android:id="@+id/b6Id"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button 7"
                android:id="@+id/b7Id"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button 8"
                android:id="@+id/b8Id"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button 9"
                android:id="@+id/b9Id"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button 10"
                android:id="@+id/b10Id"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="90sp"
                android:background="#ffffff"
                android:text="TextView for Button one"
                android:id="@+id/TextViewOne"
                android:gravity="center"
                android:textSize="20sp"
                android:fontFamily="monospace"
                android:textColor="#000000"
                android:layout_marginTop="4sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="90sp"
                android:background="#ffffff"
                android:text="TextView for Button two"
                android:id="@+id/TextViewTwo"
                android:gravity="center"
                android:textSize="20sp"
                android:fontFamily="monospace"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginTop="10sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="90sp"
                android:background="#ffffff"
                android:text="TextView for Button three"
                android:id="@+id/TextViewThree"
                android:gravity="center"
                android:textSize="20sp"
                android:fontFamily="monospace"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginTop="10sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="90sp"
                android:background="#ffffff"
                android:text="TextView for Button four"
                android:id="@+id/TextViewfour"
                android:gravity="center"
                android:textSize="20sp"
                android:fontFamily="monospace"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginTop="10sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="90sp"
                android:background="#ffffff"
                android:text="TextView for Button five"
                android:id="@+id/TextViewFive"
                android:gravity="center"
                android:textSize="20sp"
                android:fontFamily="monospace"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginTop="10sp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>